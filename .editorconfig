; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.sh]
indent_size = 2

[*.{yaml,yml,json,toml}]
indent_size = 2

[*.{html,css,js}]
indent_size = 2
